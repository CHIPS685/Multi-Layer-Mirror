rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    match /users/{uid}/fragments/{fragmentId} {
      allow read, write: if isOwner(uid);
    }

    match /users/{uid}/contexts/{contextId} {
      allow read, write: if isOwner(uid);
    }

    match /users/{uid}/observations/{observationId} {
      allow read: if isOwner(uid);
      allow write: if false;
    }

    match /users/{uid}/weekly/{weekId} {
      allow read: if isOwner(uid);
      allow write: if false;
    }

    match /users/{uid}/crystals/{weekId} {
      allow read: if isOwner(uid);
      allow write: if false;
    }

    match /users/{uid}/overlays/{overlayId} {
      allow read: if isOwner(uid);
      allow write: if false;
    }
  }
}
